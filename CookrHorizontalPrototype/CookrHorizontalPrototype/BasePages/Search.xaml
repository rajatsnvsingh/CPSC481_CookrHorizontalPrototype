<Page x:Class="CookrHorizontalPrototype.BasePages.Search"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CookrHorizontalPrototype.BasePages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Search" Background="White">

    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="219" Stroke="Black" VerticalAlignment="Top" Width="800"/>
        <Label x:Name="SearchedLabel" Content="Label" HorizontalAlignment="Left" Margin="295,77,0,0" VerticalAlignment="Top" FontSize="72" FontWeight="Bold" FontFamily="MV Boli"/>
        <Button x:Name="HomeBtn" Content="Home" HorizontalAlignment="Left" Margin="194,25,0,0" VerticalAlignment="Top" Width="75" Click="HomeBtn_Click"/>
        <TextBox x:Name="SearchField" HorizontalAlignment="Left" Height="23" Margin="295,25,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Search" HorizontalAlignment="Left" Margin="420,25,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Page>
